//proficiencies.pug
.row
  .card
    .card-body.d-flex.flex-column
      h2
        | Proficiencies
      ul
        for proficiency in locals.character.proficiencies
          li
            | #{proficiency}

      h2
        | Languages
      ul
        for language in locals.character.languages
          li
            | #{language}

      for special_proficiency in locals.character.special_proficiencies
        h2
          | #{special_proficiency.title}
        span
          | #{special_proficiency.description}